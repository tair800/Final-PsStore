@model AdminCategoryReturn
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <!-- Game Details in a Single Column -->
            <div class="game-details">
                <h1 class="display-4 mb-3 text-primary">@Model.Name</h1>

                <!-- Game Count -->
                <div class="mb-3">
                    <h4>Game Count</h4>
                    <h3 class="text-muted">@Model.GameCount</h3>
                </div>

                <!-- Game Names -->
                <div class="mb-3">
                    <h4>Game Names</h4>
                    @foreach (var game in Model.GameNames)
                    {
                        <h5 class="text-muted">@game</h5>
                    }
                </div>

                <!-- Category ID -->
                <div class="mb-3">
                    <h4>Category ID</h4>
                    <h5 class="text-muted">@Model.Id</h5>
                </div>
            </div>
        </div>
    </div>
</div>
