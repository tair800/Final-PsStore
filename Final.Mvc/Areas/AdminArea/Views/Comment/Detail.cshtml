@model AdminCommentDetailVM

<h2>Comment Details</h2>

<div>
    <h4>Comment Content:</h4>
    <p>@Model.Content</p>
    <h4>Comment History:</h4>
    <ul>
        @foreach (var history in Model.CommentHistories)
        {
            <li>@history.PreviousContent - @history.CreatedDate.ToString("MMM dd, yyyy")</li>
        }
    </ul>
</div>

<a asp-action="Index" class="btn btn-primary">Back to List</a>
<form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline">
    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this comment?');">Delete</button>
</form>
