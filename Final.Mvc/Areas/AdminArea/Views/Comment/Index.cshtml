@model IEnumerable<AdminCommentListVM>

<h2>Manage Comments</h2>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Game</th>
            <th>Content</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.UserId</td>
                <td>@comment.GameTitle</td>
                <td>@comment.Content</td>
                <td>@comment.CreatedDate.ToString("MMM dd, yyyy")</td>
                <td>
                    @* <a asp-action="Detail" asp-route-id="@comment.Id" class="btn btn-info">Details</a> *@
                    <form asp-action="Delete" asp-route-id="@comment.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this comment?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
