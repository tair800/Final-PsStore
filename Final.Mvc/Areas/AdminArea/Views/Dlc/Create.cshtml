@model AdminDlcCreateVM

<h1>Create DLC</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">DLC Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="GameId">Game</label>
        <select class="form-control" id="GameId" name="GameId">
            <option value="">Select a Game</option>
            @foreach (var game in Model.Games)
            {
                <option value="@game.Id">@game.Title</option>
            }
        </select>
        <span asp-validation-for="GameId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Image">Upload Image</label>
        <input type="file" class="form-control" id="Image" name="Image" accept="image/*" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create DLC</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
