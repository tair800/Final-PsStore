@model List<DlcListVM>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">' Game Table</h4>
            <div class="table-responsive">
                <table class="table table-bordered " style="width:1200px !important">
                    <thead>
                        <tr>
                            <th> Id</th>
                            <th> Name </th>
                            <th> Price </th>
                            <th> Game </th>
                            <th> Image </th>
                            <th> CreateDate </th>
                            <th> UpdateDate </th>
                            <th> Settings </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dlc in Model)
                        {
                            <tr>
                                <td> @dlc.Id </td>
                                <td> @dlc.Name </td>
                                <td> @dlc.Price </td>
                                <td> @dlc.GameTitle </td>
                                
                                <td>
                                    <img src="@Url.Content("~/uploads/images/" + dlc.Image)" alt="dlc Image" style="width: 80px; height: auto; border-radius:0px" />
                                </td>
                                <td> @dlc.CreateDate.ToString("dd-MM-yyyy") </td>
                                <td> @dlc.UpdateDate?.ToString("dd-MM-yyyy") </td>
                                <td>

                                    <form asp-action="Delete" method="post" asp-route-id="@dlc.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                    <a asp-action="Detail" asp-route-id="@dlc.Id" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Detail
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).on('click', '.delete-button', function() {
        var gameId = $(this).data('id');
        var row = $(this).closest('tr');

        if (confirm('Are you sure you want to delete this dlc?')) {
            $.ajax({
                url: '/AdminArea/dlc/Delete',
                type: 'POST',
                data: { id: gameId },
                success: function () {

                },
                error: function () {
                    alert('Error deleting the dlc.');
                }
            });
        }
    });
</script>