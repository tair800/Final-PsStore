@model AdminGameReturnVM

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <!-- Game Image -->
                    <div class="image-container text-center mb-4">
                        <img src="@Model.ImgUrl ?? " https: //html.com/wp-content/uploads/flamingo-fallback.jpg"" alt="Game Image" class="img-fluid rounded game-image" />
                    </div>
                </div>
                <div class="col-md-8">
                    <!-- Game Details -->
                    <div class="game-details">
                        <h1 class="display-4 mb-3 text-primary">@Model.Title</h1>
                        <p class="text-muted">@Model.Description</p>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h4>Price</h4>
                                <h3 class="text-muted">$@Model.Price</h3>
                            </div>
                            <div class="col-md-6">
                                <h4>Sale Price</h4>
                                @if (Model.SalePrice.HasValue)
                                {
                                    <h3 class="text-success">$@Model.SalePrice</h3>
                                }
                                else
                                {
                                    <h3 class="text-muted">N/A</h3>
                                }
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h4>Category</h4>
                                <h5 class="text-muted">@Model.CategoryName</h5>
                            </div>
                            <div class="col-md-6">
                                <h4>Game ID</h4>
                                <h5 class="text-muted">@Model.Id</h5>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h4>Created Date</h4>
                                <h5 class="text-muted">@Model.CreatedDate.ToString("dd-MM-yyyy")</h5>
                            </div>
                            <div class="col-md-6">
                                <h4>Updated Date</h4>
                                <h5 class="text-muted">@Model.UpdatedDate.ToString("dd-MM-yyyy")</h5>
                            </div>
                        </div>

                        <!-- Platform Row -->
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <h4>Platform</h4>
                                <h5 class="text-muted">@Model.Platform</h5>
                            </div>
                        </div>

                        <h4>DLCs</h4>
                        <div class="dlc-list">
                            @foreach (var dlc in Model.DlcNames)
                            {
                                <div class="dlc-item mb-3 p-3 rounded shadow-sm">
                                    <div class="row">
                                        <div class="col-md-4 text-center">
                                            <img src="@dlc.Image ?? " https: //html.com/wp-content/uploads/flamingo-fallback.jpg"" alt="@dlc.Name" class="img-fluid dlc-image" />
                                        </div>
                                        <div class="col-md-8">
                                            <h5 class="text-secondary">@dlc.Name (@dlc.Price.ToString("C"))</h5>
                                            <p class="small text-muted">Created On: @dlc.CreatedDate.ToString("dd-MM-yyyy")</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Game Image Styling */
    .game-image {
        width: 100%;
        max-height: 300px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Game Details */
    .game-details {
        padding: 15px;
    }

    /* DLC List Styling */
    .dlc-list {
        margin-top: 20px;
        border-top: 1px solid #e0e0e0;
        padding-top: 10px;
    }

    .dlc-item {
        background-color: #f8f9fa;
    }

    .dlc-image {
        width: 100%;
        height: 100px;
        object-fit: cover;
        margin-bottom: 10px;
        border-radius: 5px;
    }

    /* General Card Shadow */
    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    /* Primary Heading Styling */
    .text-primary {
        color: #007bff !important;
    }

    /* Sale Price Styling */
    .text-success {
        color: #28a745 !important;
    }

    /* Spacing and Borders */
    .row > .col-md-6 {
        border-right: 1px solid #e0e0e0;
    }

        .row > .col-md-6:last-child {
            border-right: none;
        }
</style>
