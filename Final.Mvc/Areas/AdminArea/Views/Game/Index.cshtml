
@using Final.Mvc.Areas.AdminArea.ViewModels.GameVMs
@model List<GameListVM>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Game Table</h4>
            <a asp-action="Create" class="btn btn-success mb-3">Create New Game</a>

            <div class="table-responsive">
                <table class="table table-bordered " style="width:1200px !important">
                    <thead>
                        <tr>
                            <th> Id</th>
                            <th> Title </th>
                            <th> Price </th>
                            <th> SalePrice </th>
                            <th> Image </th>
                            <th> CreateDate </th>
                            <th> UpdateDate </th>
                            <th> Settings </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var game in Model)
                        {
                            <tr>
                                <td> @game.Id </td>
                                <td> @game.Title </td>
                                <td> @game.Price </td>
                                <td> @game.SalePrice </td>
                                <td>
                                    <img src="@Url.Content("~/uploads/images/" + game.Image)" alt="Game Image" style="width: 80px; height: auto; border-radius:0px" />
                                </td>
                                <td> @game.CreateDate.ToString("dd-MM-yyyy") </td>
                                <td> @game.UpdateDate.ToString("dd-MM-yyyy") </td>
                                <td>

                                    <form asp-action="Delete" method="post" asp-route-id="@game.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i></button>
                                    </form>
                                    <a asp-action="Detail" asp-route-id="@game.Id" class="btn btn-success btn-sm">
                                        <i class="fa fa-id-card"></i> 
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).on('click', '.delete-button', function() {
        var gameId = $(this).data('id');
        var row = $(this).closest('tr');

        if (confirm('Are you sure you want to delete this game?')) {
            $.ajax({
                url: '/AdminArea/Game/Delete',
                type: 'POST',
                data: { id: gameId }, 
                success: function () {
                   
                },
                error: function () {
                    alert('Error deleting the game.');
                }
            });
        }
    });
</script>