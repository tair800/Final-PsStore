 @{
     Layout = null;
 }
   @model Final.Mvc.Areas.AdminArea.ViewModels.GameVMs.AdminGameUpdateVM

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <!-- Image Upload -->
            <div class="image-container text-center mb-4">
                <img src="@Url.Content(Model.ImgUrl)" alt="Game Image" style="width: 80px; height: auto; border-radius:0px" />
            </div>
            <div class="mb-3">
                <label for="File" class="form-label">Upload New Image</label>
                <input type="file" class="form-control" id="File" name="File" />
            </div>
        </div>

        <!-- Game Details -->
        <div class="col-md-8">
            <!-- Game Title -->
            <div class="mb-3">
                <label for="Title" class="form-label">Title</label>
                <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" />
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <textarea class="form-control" id="Description" name="Description" rows="4">@Model.Description</textarea>
            </div>

            <!-- Price and Sale Price -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="Price" class="form-label">Price</label>
                    <input type="number" step="0.01" class="form-control" id="Price" name="Price" value="@Model.Price" />
                </div>
                <div class="col-md-6 mb-3">
                    <label for="SalePrice" class="form-label">Sale Price</label>
                    <input type="number" step="0.01" class="form-control" id="SalePrice" name="SalePrice" value="@Model.SalePrice" />
                </div>
            </div>

            <!-- Category Selection as Dropdown -->
            <div class="mb-3">
                <div class="form-group">
                    <label for="CategoryId">Category</label>
                    <select class="form-control" id="CategoryId" asp-for="CategoryId">
                        <option value="">Select a Category</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id" >@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <!-- Platform Selection (Radio Buttons) -->
            <div class="mb-3">
                <label class="form-label">Platform</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Platform" value="PS4" @(Model.Platform == 0 ? "checked" : "")>
                    <label class="form-check-label">PS4</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Platform" value="PS5" @((int)Model.Platform == 1 ? "checked" : "")>
                    <label class="form-check-label">PS5</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Platform" value="PS4PS5" @((int)Model.Platform == 2 ? "checked" : "")>
                    <label class="form-check-label">PS4 & PS5</label>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Update Game</button>
            </div>
        </div>
    </div>
</form>

