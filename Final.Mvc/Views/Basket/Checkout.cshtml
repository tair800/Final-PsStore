@model UserBasketVM

<div class="checkout-container">
    <h1>Checkout</h1>

    <div class="payment-form">
        <h3>Enter Payment Details</h3>

        <form asp-action="PlaceOrder" method="post" class="credit-card-form">
            <div class="form-group">
                <label for="cardHolderName">Cardholder's Name</label>
                <input type="text" id="cardHolderName" name="cardHolderName" class="form-control" placeholder="John Doe" required />
            </div>

            <div class="form-group">
                <label for="cardNumber">Card Number</label>
                <input type="text" id="cardNumber" name="cardNumber" class="form-control" placeholder="1234 5678 9012 3456" required pattern="\d{4} \d{4} \d{4} \d{4}" />
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="expiryDate">Expiry Date</label>
                    <input type="text" id="expiryDate" name="expiryDate" class="form-control" placeholder="MM/YY" required pattern="\d{2}/\d{2}" />
                </div>
                <div class="form-group col-md-6">
                    <label for="cvv">CVV</label>
                    <input type="text" id="cvv" name="cvv" class="form-control" placeholder="123" required pattern="\d{3}" />
                </div>
            </div>

            <div class="form-group">
                <label for="billingAddress">Billing Address</label>
                <input type="text" id="billingAddress" name="billingAddress" class="form-control" placeholder="1234 Main St" required />
            </div>

            <div class="form-group">
                <label for="city">City</label>
                <input type="text" id="city" name="city" class="form-control" placeholder="City" required />
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="state">State</label>
                    <input type="text" id="state" name="state" class="form-control" placeholder="State" required />
                </div>
                <div class="form-group col-md-6">
                    <label for="zip">ZIP</label>
                    <input type="text" id="zip" name="zip" class="form-control" placeholder="ZIP Code" required />
                </div>
            </div>

            <div class="total-price">
                <h3>Total: $@Model.TotalPrice</h3>
            </div>

            <button type="submit" class="btn btn-success btn-block">Place Order</button>
        </form>
    </div>
</div>

<!-- Optionally, include some styles -->
<style>
    .checkout-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
    }

    .payment-form {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-row {
        display: flex;
        justify-content: space-between;
    }

    .form-row .form-group {
        width: 48%;
    }

    .total-price {
        margin-top: 20px;
        font-size: 18px;
        font-weight: bold;
    }

    button[type="submit"] {
        width: 100%;
        padding: 10px;
        font-size: 18px;
    }
</style>
