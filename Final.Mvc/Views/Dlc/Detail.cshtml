@model DlcDetailVM

@{
    ViewData["Title"] = "DLC Detail";
}

<style>
    /* Container to center the content horizontally */
    .dlc-detail-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 50px auto; /* Centers the container horizontally */
    }

    /* Image styling */
    .dlc-image {
        max-width: 100%;
        height: auto;
        margin-bottom: 20px;
        border-radius: 8px;
    }

    /* Price styling */
    .dlc-price {
        font-size: 1.5rem;
        font-weight: bold;
        margin: 15px 0;
        color: #ff4500;
    }

    /* Back button styling */
    .btn-secondary {
        display: inline-block;
        padding: 10px 20px;
        font-size: 1rem;
        color: white;
        background-color: #6c757d;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<div class="dlc-detail-container">
    <h1>@Model.Name</h1>

    <img src="https://localhost:7047/uploads/images/@Model.Image" alt="@Model.Name" class="dlc-image" />

    <p class="dlc-price">Price: @Model.Price.ToString("C")</p>

    <p>Description: @Model.Description</p>
    <p>Game: @Model.GameTitle</p>

    <a href="@Url.Action("Index", "Dlc")" class="btn btn-secondary">Back to List</a>
</div>
