@model IEnumerable<DlcListVM>

@{
    ViewData["Title"] = "DLC List";
}

<style>
    .card-container {
        display: flex;
        justify-content: center;
        align-items: stretch;
        flex-wrap: wrap;
        gap: 20px;
    }

    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        width: 100%;
        max-width: 250px;
        margin: 0 auto;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .card img {
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
    }

    .card-body {
        text-align: center;
    }

    .card-title {
        font-size: 1.1rem;
        font-weight: bold;
        margin: 10px 0;
    }

    .card-text {
        font-size: 1rem;
        color: #333;
        margin-bottom: 10px;
    }

    .go-to-detail-btn {
        width: 100%;
        background-color: #007bff;
        color: white;
        border-radius: 5px;
        padding: 10px;
        font-size: 1rem;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

    .go-to-detail-btn:hover {
        background-color: #0056b3;
    }

    /* Ensure uniform button placement */
    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

</style>

<h1 class="text-center">DLC List</h1>
<div class="container">
    <div class="card-container">
        @foreach (var dlc in Model)
        {
            <div class="card">
                <img src="https://localhost:7047/uploads/images/@dlc.Image" alt="@dlc.Name" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@dlc.Name</h5>
                    <p class="card-text">@dlc.Price.ToString("C")</p>

                    <!-- Go to Detail Button -->
                    <a asp-action="Detail" asp-route-id="@dlc.Id" class="btn go-to-detail-btn">
                        Go to Detail
                    </a>
                </div>
            </div>
        }
    </div>
</div>
