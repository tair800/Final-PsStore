@using Final.Mvc.ViewModels.GameVMs
@model GameDetailVM

    <!-- Game Banner -->


        <div class="relative bg-cover bg-center"
        style="background-image: url('https://image.api.playstation.com/vulcan/ap/rnd/202405/2117/98954d14c0d9c88ef33f74d4734ab5da03fab034ae37fcd1.png?w=5000&thumb=false'); height: 80vh;">
        <div class="container mx-auto px-4 flex items-end h-full pb-10">
            <div class="bg-gray-900 bg-opacity-75 p-6 rounded-lg w-full md:w-1/2 lg:w-1/3">
                <h1 class="text-3xl md:text-4xl font-bold">@Model.Title</h1>
                <p class="mt-2 text-sm md:text-base">Game Science Interactive Technology Co., Ltd.</p>
                <div class="flex items-center space-x-2 md:space-x-4 mt-4">
                    <span class="bg-gray-700 text-white px-2 py-1 rounded text-xs md:text-sm">PS5</span>
                    <span class="text-lg md:text-xl">4.35</span>
                    <span>⭐</span>
                    <span class="text-sm md:text-base">67K ratings</span>
                </div>
                <p class="text-2xl md:text-3xl font-bold mt-4">$59.99</p>
                <div class="flex items-center mt-4">
                    <button
                        class="bg-orange-500 text-white py-2 rounded hover:bg-orange-600 transition w-full cart-btn md:w-auto">
                        Add to Cart
                    </button>
                    <button class="ml-3 text-white hover:text-gray-300 transition">
                        <i class="fa fa-heart text-3xl"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>


    <!-- Add-Ons Section -->
    <div class="container mx-auto py-10">
        <h2 class="text-3xl text-center mb-8">Add-Ons</h2>
        <div class="flex justify-center">
            <div class="max-w-xs">
                <img class="rounded-lg mb-4"
                    src="https://image.api.playstation.com/vulcan/ap/rnd/202405/2117/98954d14c0d9c88ef33f74d4734ab5da03fab034ae37fcd1.png?w=5000&thumb=false"
                    alt="Black Myth: Wukong Deluxe Edition Upgrade">
                <h3 class="text-lg font-semibold">Black Myth: Wukong Deluxe Edition Upgrade</h3>
                <p class="text-lg font-bold mt-2">$10.00</p>
            </div>
            <div class="max-w-xs">
                <img class="rounded-lg mb-4"
                    src="https://image.api.playstation.com/vulcan/ap/rnd/202405/2117/98954d14c0d9c88ef33f74d4734ab5da03fab034ae37fcd1.png?w=5000&thumb=false"
                    alt="Black Myth: Wukong Deluxe Edition Upgrade">
                <h3 class="text-lg font-semibold">Black Myth: Wukong Deluxe Edition Upgrade</h3>
                <p class="text-lg font-bold mt-2">$10.00</p>
            </div>
        </div>
    </div>

    <!-- Ratings Section -->
    <div class="container mx-auto py-10">
        <h2 class="text-3xl text-center mb-8">Ratings</h2>
        <div class="flex flex-col md:flex-row bg-gray-800 rounded-lg p-6">
            <!-- Left Side: Game Title and Sign In Button -->
            <div class="w-full md:w-1/3 flex flex-col justify-between mb-6 md:mb-0 text-center md:text-left">
                <div>
                    <h5 class="text-xl font-semibold mb-4">Black Myth: Wukong</h5>
                </div>
                <button class="bg-white text-black font-bold py-3 px-6 rounded-full hover:bg-gray-200">
                    Sign In to Rate
                </button>
            </div>
            <div class="hidden md:block md:w-px bg-gray-600 mx-6"></div>

            <!-- Right Side: Ratings Overview -->
            <div class="w-full md:w-2/3">
                <h5 class="text-lg font-semibold mb-4">Global player ratings</h5>
                <div class="flex items-center mb-3">
                    <div class="w-2/3 bg-gray-600 h-2 rounded-full mr-3">
                        <div class="bg-yellow-500 h-2 rounded-full" style="width: 78%;"></div>
                    </div>
                    <span>78%</span>
                </div>
                <div class="flex items-center mb-3">
                    <div class="w-2/3 bg-gray-600 h-2 rounded-full mr-3">
