@section Links {
    <link href="~/css/detail.css" rel="stylesheet" />
}

@model GameDetailVM

<style>
    .game-banner {
        background-image: url(@Model.ImgUrl)
    }
</style>
<!-- Game Banner -->
<div class="game-banner d-flex align-items-end">
    <div class="container">
        <div class="game-info text-white p-4 mb-4">
            <h1 class="fw-bold">@Model.Title</h1>
            <div class="d-flex align-items-center mb-3">
                <span class="badge bg-secondary me-2">@Model.Platform</span>
                <span class="me-2">4.35</span>
                <span class="me-2 rating-star">⭐</span>
                <span>67K ratings</span>
            </div>
            <p class="game-price">$@Model.Price</p>
            <div class="d-flex align-items-center">
                <button class="btn btn-warning text-dark cart-btn">Add to Cart</button>
                <button class="btn btn-link text-white ms-3">
                    <i class="fa fa-heart text-3xl"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Add-Ons Section -->
 <div class="container py-5">
     <h2 class="text-center mb-5">Add-Ons</h2>
     <div class="d-flex justify-content-center">
          @foreach (var dlc in Model.DlcNames)
         {
             <div class="addon-item text-center">
                 <img class="addon-img rounded" src="@dlc.ImgUrl" alt="@dlc.Name"
                      alt="e Edition Upgrade">
                 <h3 class="fs-5 mt-2">@dlc.Price</h3>
                 <p class="fs-5 fw-bold">$@dlc.Name</p>
             </div>
         }
     </div>
 </div>
