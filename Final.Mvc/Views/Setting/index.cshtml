@model Dictionary<string,string>

@section Links {
    <link href="/css/setting.css" rel="stylesheet" />
}
<div class=" mt-5">
    <div class="row">
        <!-- Contact Info Section -->
        <div class="col-md-4">
            <div class="contact-info text-center">
                <i class="bi bi-geo-alt-fill"></i>
                <h5>Address</h5>
                <p>@Model["Adress"]</p>
            </div>

            <div class="contact-info text-center">
                <i class="bi bi-telephone-fill"></i>
                <h5>Phone</h5>
                <p>@Model["Phone"]</p>
            </div>

            <div class="contact-info text-center">
                <i class="bi bi-telephone-fill"></i>
                <h5>Whatsapp</h5>
                <p>@Model["WhatsApp"]</p>
            </div>

            <div class="contact-info text-center">
                <i class="bi bi-telephone-fill"></i>
                <h5>Instagram</h5>
                <p>@Model["Instagram"]</p>
            </div>

            <div class="contact-info text-center">
                <i class="bi bi-envelope-fill"></i>
                <h5>Email</h5>
                <p>@Model["Email"]</p>
            </div>
        </div>

        <!-- Contact Form Section -->
        <div class="col-md-8">
            <h2>LEAVE A MESSAGE</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @if ((bool)ViewBag.IsAuthenticated)
            {
                <form asp-action="SendSupportEmail" method="post" class="form-container">
                    <div class="mb-3">
                        <label for="name" class="form-label">UserName</label>
                        <input type="text" class="form-control" id="name" name="name" value="@ViewBag.UserName" readonly >
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="@ViewBag.UserEmail" readonly >
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject" name="subject" placeholder="Enter subject" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="4" placeholder="Enter your message" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            }
            else
            {
                <div class="alert alert-warning">Please <a href="@Url.Action("Login", "User")">log in</a> to send a message.</div>
            }
        </div>
    </div>
</div>  