@model Final.Mvc.ViewModels.SettingVMs.HeaderVM

<header>
    <!-- Primary Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container d-flex flex-column flex-lg-row align-items-start">
            <!-- Top-left for small screens -->
            <div class="top-left-container d-lg-none">
                @if (!string.IsNullOrEmpty(Model.FullName))
                {
                    <span class="nav-link">Welcome, @Model.FullName!</span>
                    <a class="nav-link" asp-controller="Setting" asp-action="Index">Settings</a>
                }
                else
                {
                    <a class="nav-link signin-btn" href="@Url.Action("Login", "User")">Sign In</a>
                    <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="bi bi-search"></i></a>
                }
            </div>

            <!-- Logo -->
            <a class="navbar-brand me-3" href="#">
                @Html.Raw(Model.Settings["Logo"]) <!-- Displaying the logo from the settings dictionary -->
            </a>

            <!-- Responsive toggle button for small screens -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation links -->
            <div class="collapse navbar-collapse w-100" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Games</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">PS5</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">PS4</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Setting" asp-action="Index">Support</a>
                    </li>
                </ul>

                <!-- Show either "Sign In" or the username and settings button based on authentication -->
                <ul class="navbar-nav ms-auto align-items-center d-none d-lg-flex">
                    @if (!string.IsNullOrEmpty(Model.FullName))
                    {
                        <li class="nav-item">
                            <span class="nav-link">Welcome, @Model.FullName!</span> <!-- Display username -->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Setting" asp-action="Index">Settings</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="User" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-link nav-link">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link signin-btn" asp-controller="User" asp-action="Login">Sign In</a>
                        </li>
                    }
                    <li class="nav-item me-3">
                        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="bi bi-search"></i></a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#basketModal"><i class="bi bi-basket"></i></a>
                         @* <span class="badge bg-secondary">@Model.BasketCount</span> <!-- Display basket count --> *@
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Search Modal -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="searchModalLabel">Search</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="searchForm">
                        <div class="input-group">
                            <input type="text" class="form-control" id="searchInput" placeholder="Search for games, add-ons, etc.">
                            <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </form>
                    <div id="searchResults" class="mt-3">
                        <!-- Search results will be displayed here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Basket Modal -->
    <div class="modal fade" id="basketModal" tabindex="-1" aria-labelledby="basketModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="basketModalLabel">Your Basket</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">
                            Game 1 - $49.99
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            Game 2 - $19.99
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            Game 3 - $29.99
                        </a>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <h5>Total:</h5>
                        <h5>$99.97</h5>
                    </div>
                    <button class="btn btn-primary w-100 mt-3">Checkout</button>
                </div>
            </div>
        </div>
    </div>
</header>
