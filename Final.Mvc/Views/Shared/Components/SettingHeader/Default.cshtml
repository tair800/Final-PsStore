@model HeaderVM

<header>
    <div>
        <h2>Welcome, @Model.UserFullName</h2>
        <p>Basket Count: @Model.BasketCount</p>
        <p>Total Price: $@Model.TotalPrice</p>
    </div>

    <nav>
        <ul>
            @foreach (var setting in Model.Settings)
            {
                <li><strong>@setting.Key:</strong> @setting.Value</li>
            }
        </ul>
    </nav>
</header>
