@model UserBasketVM
<style>
    /* Basket Container */
    .basket-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 10px;
    }

    /* Basket Item */
    .basket-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #fff;
        transition: background-color 0.3s ease;
    }

        .basket-item:hover {
            background-color: #f0f0f0;
        }

        /* Game Image */
        .basket-item img {
            width: 80px;
            height: 80px;
            margin-right: 20px;
            border-radius: 5px;
            object-fit: cover;
        }

    /* Game Details */
    .basket-item-details {
        flex-grow: 1;
    }

        /* Game Title */
        .basket-item-details h4 {
            margin: 0;
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }

        /* Game Price and Quantity */
        .basket-item-details p {
            margin: 5px 0;
            font-size: 16px;
            color: #666;
        }

    /* Delete Button */
    .delete-btn {
        background-color: #e74c3c;
        border: none;
        color: white;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

        .delete-btn:hover {
            background-color: #c0392b;
        }

    /* Total Price Section */
    .total-price {
        text-align: right;
        margin-top: 20px;
        padding-top: 10px;
        border-top: 2px solid #ddd;
    }

        .total-price strong {
            font-size: 18px;
            color: #333;
        }

        .total-price p {
            font-size: 20px;
            font-weight: bold;
            color: #d9534f;
        }

</style>

<div class="basket-container">

    @foreach (var item in Model.BasketGames)
    {
        <div class="basket-item">
            <div class="basket-item-details">
                <img src="https://localhost:7047/uploads/images/@item.GameImgUrl" class="game-image" />
                <h4>@(item.GameTitle ?? "No Title")</h4>
                <p>Price: $@(item.Price > 0 ? item.Price.ToString("F2") : "N/A")</p>
                <p>Quantity: @(item.Quantity > 0 ? item.Quantity : 0)</p>
                <p>Total: $@(item.Price > 0 && item.Quantity > 0 ? (item.Price * item.Quantity).ToString("F2") : "N/A")</p>
            </div>
            <button class="remove-from-cart-btn" gameId="@item.GameId">Remove</button>
        </div>
    }

    <div class="total-price">
        <strong>Total Price:</strong>
        <p>$@(Model.TotalPrice.ToString("F2"))</p>
    </div>

</div>

@section Scripts {
    <script>
        $(document).on("click", ".remove-from-cart-btn", function () {
            console.log("Attempting to remove from basket...");

            const token = getJwtTokenFromCookie();
            if (!token) {
                alert("Please log in to remove games from the basket.");
                return;
            }

            const gameId = $(this).attr("gameId");
            console.log(`Removing game with ID: ${gameId}`);

            // Send the AJAX request to remove the game from the basket
            $.ajax({
                url: `/Basket/RemoveFromBasket?gameId=${gameId}`,  // Call the correct MVC action
                type: 'POST',
                headers: {
                    'Authorization': `Bearer ${token}`  // Include the JWT token in the request headers
                },
                success: function (response) {
                    alert('Game removed from basket!');
                    location.reload();  // Reload the page to reflect the changes in the basket
                },
                error: function (xhr, status, error) {
                    console.log('Error:', xhr.responseText || error);
                    alert('Failed to remove game from basket.');
                }
            });
        });


    </script>
}
