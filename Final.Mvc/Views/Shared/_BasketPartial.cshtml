@model List<BasketItemVM>

<div>

        @foreach (var item in Model)
        {
            <div>
                <h4>@(item.GameTitle ?? "No Title")</h4> <!-- Ensure GameTitle is not null -->
                <p>Price: $@(item.Price != 0 ? item.Price.ToString() : "N/A")</p> <!-- Check for valid Price -->
                <p>Quantity: @(item.Quantity > 0 ? item.Quantity : 0)</p> <!-- Ensure Quantity is valid -->
                <p>Total: $@(item.TotalPrice != 0 ? item.TotalPrice.ToString() : "N/A")</p>
                <img src="@item.ImgUrl ?? " default.jpg"" alt="@item.GameTitle" /> <!-- Use default image if ImgUrl is null -->
            </div>
        }
    }

</div>
