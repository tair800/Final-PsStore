@model UserBasketVM

<style>
    /* Basket Container */
    .basket-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 10px;
    }

    /* Basket Item */
    .basket-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #fff;
        transition: background-color 0.3s ease;
    }

        .basket-item:hover {
            background-color: #f0f0f0;
        }

    /* Fade-out Animation */
    .fade-out {
        opacity: 0;
        transition: opacity 0.5s ease-out;
    }

    /* Game Image */
    .basket-item img {
        width: 80px;
        height: 80px;
        margin-right: 20px;
        border-radius: 5px;
        object-fit: cover;
    }

    /* Game Details */
    .basket-item-details {
        flex-grow: 1;
        cursor: pointer; /* Make it look clickable */
    }

        /* Game Title */
        .basket-item-details h4 {
            margin: 0;
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }

        /* Game Price and Quantity */
        .basket-item-details p {
            margin: 5px 0;
            font-size: 16px;
            color: #666;
        }

    /* Delete Button */
    .delete-btn {
        background-color: #e74c3c;
        border: none;
        color: white;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

        .delete-btn:hover {
            background-color: #c0392b;
        }

    /* Total Price Section */
    .total-price {
        text-align: right;
        margin-top: 20px;
        padding-top: 10px;
        border-top: 2px solid #ddd;
    }

        .total-price strong {
            font-size: 18px;
            color: #333;
        }

        .total-price p {
            font-size: 20px;
            font-weight: bold;
            color: #d9534f;
        }

    a {
        text-decoration: none;
        color: inherit; /* Ensures link color matches surrounding text */
    }

    button {
        font-size: 10px;
        background: none;
        border: 0;
    }

    .fa-solid {
        font-weight: 900;
        margin-right: 20px;
        font-size: 25px;
    }

</style>

<div class="basket-container">
    @foreach (var item in Model.BasketGames)
    {
        <div class="basket-item">
            <div class="basket-item-details">
                <img src="https://localhost:7047/uploads/images/@item.GameImgUrl" class="game-image" />

                <!-- Link to Game Detail Page -->
                <a asp-action="Detail" asp-controller="Game" asp-route-id="@item.GameId">
                    <h4>@(item.GameTitle ?? "No Title")</h4>
                </a>

                <p>Price: $@(item.Price > 0 ? item.Price.ToString("F2") : "N/A")</p>
                <p>Quantity: @(item.Quantity > 0 ? item.Quantity : 0)</p>
                <p>Total: $@(item.Price > 0 && item.Quantity > 0 ? (item.Price * item.Quantity).ToString("F2") : "N/A")</p>
            </div>
            <button class="remove" data-game-id="@item.GameId"><i class="fa-solid fa-trash"></i></button>
        </div>
    }

    <div class="total-price">
        <strong>Total Price:</strong>
        <p>$@(Model.TotalPrice.ToString("F2"))</p>
    </div>

    <!-- Checkout Button -->
    <div class="checkout-button">
        <a asp-action="Checkout" asp-controller="Basket" class="btn btn-primary">Proceed to Checkout</a>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</div>

