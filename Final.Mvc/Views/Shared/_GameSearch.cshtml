@model IEnumerable<GameListItemVM>

@if (!Model.Any())
{
    <p>No games found.</p>
}
else
{
    @foreach (var game in Model)
    {
        <div class="game-item d-flex align-items-center mb-3">
            <img src="@game.Image" alt="@game.Title" style="width: 100px; height: auto; margin-right: 15px;" />
            <div>
                <h5>@game.Title</h5>
                <p>Price: $@game.Price.ToString("F2")</p>
                <a href="/Game/Detail/@game.Id" class="btn btn-primary">View Details</a>
            </div>
        </div>
    }   
}
