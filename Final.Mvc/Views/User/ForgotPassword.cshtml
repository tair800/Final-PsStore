@{
    ViewBag.Title = "Forgot Password";
}
@model ForgotPasswordVM

@section Links {
    <link href="/css/login.css" rel="stylesheet" />
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<!-- Forgot Password View with Background Wrapper -->
<div class="content-area">
    <div class="login">
        <form asp-action="ForgotPassword" method="post">
            <div class="login-container">
                <h2><i class="fa-brands fa-playstation"></i></h2>

                <div class="mb-3">
                    <label for="Email" class="form-label visually-hidden">Email Address</label>
                    <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Enter your email address" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-next">Send Password Reset Link</button>

                <div class="links">
                    <a asp-controller="user" asp-action="Login">Back to Login</a>
                </div>
            </div>
        </form>
    </div>
</div>
