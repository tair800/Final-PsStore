@{
    ViewBag.Title = "Register";
}
@model RegisterVM

@section Links {
    <link href="/css/login.css" rel="stylesheet" />
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
        <i class="fa fa-exclamation-circle me-2" aria-hidden="true"></i>
        <span>@ViewBag.ErrorMessage</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<!-- Register View with Background Wrapper -->
<div class="content-area">
    <div class="login">
        <form asp-action="Register" method="post">
            <div class="login-container">
                <h2><i class="fa-brands fa-playstation"></i></h2>

                <!-- Validation Summary -->

                <div class="mb-3">
                    <label for="FullName" class="form-label visually-hidden">Full Name</label>
                    <input asp-for="FullName" class="form-control" id="FullName" placeholder="Full Name">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="UserName" class="form-label visually-hidden">Username</label>
                    <input asp-for="UserName" class="form-control" id="UserName" placeholder="Username">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label visually-hidden">Email Address</label>
                    <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label visually-hidden">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label visually-hidden">Confirm Password</label>
                    <input asp-for="RePassword" type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm Password">
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-next">Register</button>

                <div class="links">
                    <a asp-controller="user" asp-action="Login">Already have an account? Log in</a>
                </div>
            </div>
        </form>
    </div>
</div>
