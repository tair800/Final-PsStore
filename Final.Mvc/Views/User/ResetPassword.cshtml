@{
    ViewBag.Title = "Reset Password";
}
@model ResetPasswordVM

@section Links {
    <link href="/css/login.css" rel="stylesheet" />
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<!-- Reset Password View with Background Wrapper -->
<div class="content-area">
    <div class="login">
        <form asp-action="ResetPassword" method="post">
            <div class="login-container">
                <h2><i class="fa-brands fa-playstation"></i></h2>

                <!-- Token (Hidden) -->
                <input asp-for="Token" type="hidden" />

                <div class="mb-3">
                    <label for="Email" class="form-label visually-hidden">Email Address</label>
                    <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="NewPassword" class="form-label visually-hidden">New Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" id="NewPassword" placeholder="New Password" required>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label visually-hidden">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm Password" required>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-next">Reset Password</button>

                <div class="links">
                    <a asp-controller="user" asp-action="Login">Back to Login</a>
                </div>
            </div>
        </form>
    </div>
</div>
